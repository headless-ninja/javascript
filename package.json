{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/fetch-mock": "6.0.3",
    "@types/jest": "23.3.2",
    "@types/node": "9.6.18",
    "@types/prop-types": "15.5.5",
    "@types/react": "16.4.7",
    "@types/react-test-renderer": "16.0.2",
    "@types/util-deprecate": "1.0.0",
    "babel-core": "6.26.3",
    "babel-jest": "23.6.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "coveralls": "3.0.2",
    "del": "3.0.0",
    "fetch-mock": "7.0.2",
    "gulp": "3.9.1",
    "gulp-babel": "7.0.1",
    "gulp-rename": "1.4.0",
    "gulp-sourcemaps": "2.6.4",
    "gulp-typescript": "4.0.2",
    "jest": "23.6.0",
    "lerna": "3.4.0",
    "merge2": "1.2.2",
    "prettier": "1.14.3",
    "react": "16.5.2",
    "react-test-renderer": "16.5.2",
    "rimraf": "2.6.2",
    "semantic-release": "15.6.3",
    "semantic-release-monorepo": "6.1.1",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.10.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-react": "3.6.0",
    "typescript": "3.0.3"
  },
  "scripts": {
    "build": "gulp build",
    "test": "tsc --noEmit && jest",
    "start": "gulp",
    "lint": "prettier '**/*.{js,ts,tsx,json,md}' -l && tslint '**/*.{js,ts,tsx}' -c tslint.json -p tsconfig.json",
    "lint:fix": "prettier '**/*.{js,ts,tsx,json,md}' --write -l && tslint '**/*.{js,ts,tsx}' -c tslint.json -p tsconfig.json --fix",
    "release": "lerna exec --concurrency 1 -- ../../node_modules/.bin/semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {},
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://headless.ninja",
    "testRegex": "src/.*(__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/.*/_*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "projects": [
      "<rootDir>/projects/*"
    ],
    "restoreMocks": true,
    "setupTestFrameworkScriptFile": "<rootDir>/packages/hn/src/__tests__/setup.js",
    "clearMocks": true
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
