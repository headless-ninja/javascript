{
  "name": "hn",
  "version": "0.0.0-development",
  "description": "Connects with an Drupal website that has the hn module installed.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "url": "https://github.com/burst-digital/hn"
  },
  "author": "Bart Langelaan",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^2.13.1",
    "fetch-mock": "^5.12.1",
    "nyc": "^11.1.0",
    "prettier": "^1.11.1",
    "semantic-release": "^8.0.3",
    "tap-nyc": "^1.0.2",
    "tape": "^4.8.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.4.2"
  },
  "scripts": {
    "build": "rimraf lib && tsc",
    "test": "nyc tape tests/unit/*.js | tap-nyc",
    "coverage": "nyc report",
    "start": "yarn build -- --watch",
    "lint": "prettier 'src/**/*.{js,ts,tsx}' -l && tslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "prettier 'src/**/*.{js,ts,tsx}' --write -l && tslint 'src/**/*.{js,ts,tsx}' --fix",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "deepmerge": "^1.5.0",
    "es6-promise": "^4.1.1",
    "fetch-ponyfill": "^4.1.0",
    "get-nested": "^4.0.0",
    "isomorphic-fetch": "^2.2.1",
    "query-string": "^5.0.0",
    "rimraf": "^2.6.2",
    "universal-fetch": "^1.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tests/**"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
