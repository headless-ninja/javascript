{
  "private": true,
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/fetch-mock": "6.0.1",
    "@types/jest": "22.2.3",
    "@types/node": "9.6.18",
    "@types/prop-types": "15.5.3",
    "@types/react": "16.3.13",
    "@types/react-test-renderer": "16.0.1",
    "@types/util-deprecate": "1.0.0",
    "babel-core": "6.26.3",
    "babel-jest": "22.4.4",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "coveralls": "3.0.1",
    "del": "3.0.0",
    "fetch-mock": "6.4.2",
    "gulp": "3.9.1",
    "gulp-babel": "7.0.1",
    "gulp-rename": "1.2.3",
    "gulp-sourcemaps": "2.6.4",
    "gulp-typescript": "4.0.2",
    "jest": "22.4.4",
    "lerna": "2.11.0",
    "merge2": "1.2.2",
    "prettier": "1.12.1",
    "react": "16.3.2",
    "react-test-renderer": "16.3.2",
    "rimraf": "2.6.2",
    "semantic-release": "15.4.1",
    "semantic-release-monorepo": "6.0.1",
    "ts-jest": "22.4.6",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "1.12.0",
    "tslint-react": "3.6.0",
    "typescript": "2.8.3"
  },
  "scripts": {
    "build": "gulp build",
    "test": "tsc --noEmit && jest",
    "start": "gulp",
    "lint":
      "prettier '**/*.{js,ts,tsx,json,md}' -l && tslint '**/*.{js,ts,tsx}' -c tslint.json",
    "lint:fix":
      "prettier '**/*.{js,ts,tsx,json,md}' --write -l && tslint '**/*.{js,ts,tsx}' -c tslint.json --fix",
    "release":
      "lerna exec -- ../../node_modules/.bin/semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {},
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["packages/*/src/**/*.{ts,tsx}"],
    "coverageReporters": ["lcov", "text"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://headless.ninja",
    "testRegex": "src/.*(__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "testPathIgnorePatterns": ["/node_modules/", "<rootDir>/.*/_*.ts"],
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "node"],
    "projects": ["<rootDir>/projects/*"],
    "restoreMocks": true,
    "setupTestFrameworkScriptFile":
      "<rootDir>/packages/hn/src/__tests__/setup.js",
    "clearMocks": true
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
