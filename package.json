{
  "name": "hn-react",
  "version": "0.0.0-development",
  "description": "The React implementation of Headless Ninja.",
  "main": "lib/index.js",
  "repository": {
    "url": "https://github.com/headless-ninja/hn-react"
  },
  "author": "Bart Langelaan",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.25.0",
    "get-nested": "^4.0.0",
    "prop-types": "^15.5.10",
    "react-async-bootstrapper": "^1.1.2",
    "util-deprecate": "^1.0.2"
  },
  "peerDependencies": {
    "hn": "^0.6.1",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "coveralls": "^3.0.0",
    "hn": "^0.6.1",
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.8.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "start": "npm run build -- -w",
    "build": "rimraf lib && babel src -d lib --ignore test.js",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release",
    "test": "yarn test:unit && yarn test:lint",
    "test:unit": "jest --coverage",
    "test:unit:update": "yarn test:unit -- -u",
    "test:lint": "prettier 'src/**/*.js' -l && tslint 'src/**/*.js'",
    "format": "prettier 'src/**/*.js' --write -l && tslint 'src/**/*.js' --fix"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
